<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/panelGreenDark">

        <TextView
            android:id="@+id/patient_video_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="36dp"
            android:paddingBottom="16dp"
            android:text="@string/patient_video_title_text_placeholder"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:text="MORE RESOURCES"
            android:layout_marginTop="36dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/panelGreenDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/open_yt_button"
            android:layout_marginTop="8dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Watch Video" />

        <Button
            android:id="@+id/open_web_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Read More" />

        <TextView
            android:text="PHARMACY DETAILS"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/panelGreenDark"
            android:layout_marginTop="36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/pharmacy_name"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/pharmacy_phone"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/pharmacist"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_margin="0dp"
        android:background="@color/panelGreenDark">

        <!-- Icons made by Freepik from www.flaticon.com is licensed by CC 3.0 BY -->
        <ImageButton
            android:id="@+id/patient_view_text_button"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="@color/zxing_transparent"
            android:contentDescription="@string/patient_translate_nav_text"
            android:src="@drawable/ic_text_btn_left" />

        <View
            android:layout_width="4dp"
            android:layout_height="fill_parent"
            android:background="@color/white" />
        <!-- Icons made by Freepik from www.flaticon.com is licensed by CC 3.0 BY -->
        <ImageButton
            android:id="@+id/patient_tap_again_icon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@color/zxing_transparent"
            android:contentDescription="@string/patient_audio_tap_again"
            android:src="@drawable/ic_logo_white_icon" />
    </LinearLayout>


</LinearLayout>